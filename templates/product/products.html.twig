{% extends 'base.html.twig' %}

{% block body %}
        <div class="my-5 row">
                {% for product in products %}
                <div class="my-5 mb-5 col-3 mt-4">
                        <div class="border border-dark rounded p-2 clearfix">
                                <h2>
                                        {{ product.name }}
                                        </br>
                                        {{ product.price }}
                                        â‚¬
                                </h2>
                                <img class="img-fluid rounded" src="{{ product.image }}" alt="Image de {{ product.name }}">
                                <hr>
                                <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-primary float-left">Show More</a>
                                {% if app.user %}
                                        <a href="{{path('cart_add', {'id': product.id}) }}" class="btn btn-success float-right">
                                                <i class="fas fa-shopping-cart mr-1"></i>
                                                Ajouter
                                        </a>
                                {% endif %}

                        </div>
                
                </div>
                {% endfor %}
        </div>
{% endblock %}