{% extends "base.html.twig" %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <h1 class="mb-5">Sign Up</h1>
    {{ form_start(form, {'attr': {'class': 'min-vh-100'}} ) }}
        {{ form_row(form.username, {'attr': {'placeholder': 'Username...'}})}}
        {{ form_row(form.email, {'attr': {'placeholder': 'Email...'}})}}
        {{form_row(form.password, {'attr': {'placeholder': 'Password...'}})}}
        {{form_row(form.confirm_password, {'attr': {'placeholder': 'Confirm Password...'}})}}
        <button type="submit" class="btn btn-primary">Sign Up</button>
    {{form_end(form)}}
{% endblock %}