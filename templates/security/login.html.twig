{% extends "base.html.twig" %}


{% block body %}
    <h1>Sign In</h1>
    <form action="{{ path('security_login') }}" method="post" class="min-vh-100">
        <div class="form-group">
            <label for="_username">Email</label>
            <input class="form-control" type="text" required name="_username" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="_password">Password</label>
            <input class="form-control" type="password" required name="_password" placeholder="Password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Sign In</button>
        </div>
    </form>
{% endblock %}

{% block javascripts %}{{encore_entry_script_tags('app')}}{% endblock %}